<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CvBuilderActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="10dp"
            android:text="Enter Your Personal Details Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/name"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />

        <EditText
            android:id="@+id/city"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <EditText
            android:id="@+id/number"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="Mobile Number"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/age"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="Age"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/email"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />
        <TextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="Enter below Your Education Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/school"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="School Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />
        <EditText
            android:id="@+id/college"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="College Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />

        <EditText
            android:id="@+id/university"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="University Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />

        <EditText
            android:id="@+id/universityDegree"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="Degree Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />

        <TextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="Enter below your Degree type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="BS"
            android:id="@+id/bs"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MS"
            android:id="@+id/ms"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Phd"
            android:id="@+id/phd"/>

        <TextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="Enter below Your Recent Project Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/project"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="Project Name, Project Name, ....."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />

        <TextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="Enter below Your Recent Project Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/projectdetail"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="Enter Project Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />

        <TextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="Enter below Your Research Background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/researchproject"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="Enter Project Background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />

        <TextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="Enter below Your KeySkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/keyskill"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="Enter Your Keyskills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="" />

        <Button

            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#BF0D0D"
            android:text="Submit Your Details"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />



























    </LinearLayout>

</ScrollView>